@page "{id:int}"
@model Chinook.Pages.Albums.DeleteModel

<h1>Delete Album</h1>

@if (Model.Album is not null)
{
    <div class="alert alert-warning">
        <strong>Are you sure you want to delete this album?</strong>
    </div>

    <p>
        <strong>Album:</strong> @Model.Album.Title<br />
        <strong>Artist:</strong> @Model.Album.Artist?.Name
    </p>

    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
    </form>
}
else
{
    <p>Album not found.</p>
}
