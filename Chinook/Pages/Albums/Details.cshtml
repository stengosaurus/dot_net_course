@page
@model Chinook.Pages.Albums.DetailsModel
@{
    ViewData["Title"] = "Album Details";
}

<h2>@Model.Album?.Title</h2>

<p><strong>Artist:</strong> @Model.Album?.Artist?.Name</p>

@if (Model.Album?.Tracks != null && Model.Album.Tracks.Any())
{
    <h4>Tracks</h4>
    <ul>
        @foreach (var track in Model.Album.Tracks)
        {
            <li>@track.Name (@track.Milliseconds ms)</li>
        }
    </ul>
}
else
{
    <p><em>No tracks found for this album.</em></p>
}

<a asp-page="./Index">Back to Albums</a>
